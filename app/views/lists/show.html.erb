<h1>
  <%= @list.name.capitalize %>
</h1>
<hr>
<ul>
  <% @list_movies.each do |movie| %>
    <li>
      <%= movie.title %>
      <%= movie.overview %>
      <%= movie.rating %>
    </li>
   <% end %>
</ul>

<h2>Add a new movie Bookmark</h2>
<div class="inline-items">
  <%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie %>
  <%= f.input :comment %>
  <%= f.submit "Bookmark the movie", class: "btn btn-success" %>
<% end %>

  <%= link_to "Back to movie lists", root_path %>
</div>
